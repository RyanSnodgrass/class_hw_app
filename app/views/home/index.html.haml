%h1 Splash Page

.row	
	.small-12.medium-9.large-10.columns
	.small-12.medium-3.large-2.columns
		.button.login login
.row
	.large-6.large-centered.columns
		%h4 Welcome to the Class asSignemnt trackKer!
		%br
		%h4 If you're a new user please sign up!
		= form_for @new_user, url: users_path, method: :post do |f|
			= label_tag :first_name
			= f.text_field :first_name

			= label_tag :last_name
			= f.text_field :last_name
			= label_tag :email, nil
			= f.text_field :email

			= f.collection_select :role, User::ROLES, :to_s, :humanize

			= label_tag :password, nil
			= f.password_field :password

			= label_tag :password_confirm
			= f.password_field :password_confirm

			= f.submit "Register", :class => "button"
